<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
       <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Twitter Reload</h1>

    <h2>
      I did it because the original app  
      <a href="https://twitter.com/">Twitter</a>
      app didn't like me...  (just kidding) .
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%=  image_tag("http://2.bp.blogspot.com/-kQOFf5L1K-c/T9o1nHQ90MI/AAAAAAAAA_o/cOukbm3evDs/s1600/suggested-twitter-logo-2015.jpg", size: "180x180") %>
<% end %> 